{
  "manifest_version": 3,
  "name": "Canvasclump",
  "description": "Extension that clumps canvas links",
  "version": "1.0.0",
  "action": {
    "default_popup": "index.html",
    "default_icon": "logo.png",
    "default_title": "Open Settings"
  },
  "background": {
    "service_worker": "background.js"
  },
  "permissions": ["storage", "activeTab", "scripting"],
  "commands": {
    "canvasClump": {
      "suggested_key": {
        "default": "Ctrl+Z",
        "mac": "Command+Z"
      },
      "description": "Run Canvasclump on the current page."
    },
    "_execute_action": {
      "suggested_key": {
        "windows": "Ctrl+Z",
        "mac": "Command+Z",
        "chromeos": "Ctrl+Z",
        "linux": "Ctrl+Z"
      }
    }
  }
}
