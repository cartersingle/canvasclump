{
  "manifest_version": 3,
  "name": "Canvasclump",
  "description": "Extension that clumps canvas links",
  "version": "1.0.0",
  "action": {
    "default_popup": "index.html",
    "default_icon": {
      "16": "logo16.png",
      "32": "logo32.png",
      "48": "logo48.png",
      "128": "logo128.png"
    },
    "default_title": "Open Links"
  },
  "background": {
    "service_worker": "background.js"
  },
  "permissions": ["storage", "activeTab", "scripting", "tabs"],
  "commands": {
    "canvasClump": {
      "suggested_key": {
        "default": "Ctrl+Z",
        "mac": "Command+Z"
      },
      "description": "Run Canvasclump on the current page."
    },
    "_execute_action": {
      "suggested_key": {
        "windows": "Ctrl+Z",
        "mac": "Command+Z",
        "chromeos": "Ctrl+Z",
        "linux": "Ctrl+Z"
      }
    }
  },
  "icons": {
    "16": "logo16.png",
    "32": "logo32.png",
    "48": "logo48.png",
    "128": "logo128.png"
  }
}
